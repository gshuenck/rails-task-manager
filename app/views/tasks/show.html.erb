<div>
  <h2><%= @task.title %></h2>
  <%= link_to 'Edit', edit_task_path(@task) %>
</div>
<div>
  <p><%= @task.details %></p>
</div>
<div>
  <% if (@task.completed == true) %>
  <input type="checkbox" id="task_<%= @task.id %>" <%= 'checked' if @task.completed %>>
   This task is completed
  <% else %>
  <input type="checkbox" id="task_<%= @task.id %>" <%= 'checked' if @task.completed %>>
   This task is not completed yet
  <% end %>
</div>
